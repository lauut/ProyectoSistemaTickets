<br/> 

<h1>Detalle de ticket</h1>
<br />
<form>

    <div style="display: flex; gap: 20px; align-items: center;">
        <div style="flex: 1;">
            <label for="nombreCliente">Nombre Cliente</label>
            @Html.TextBox("nombreCliente", "", new { @class = "form-control", id = "nombreCliente" })
        </div>
        <div style="flex: 1;">
            <label>Prioridad:</label>
            <select name="ddlpriori" id="ddlpriori">
                <option>--Seleccionar prioridad--</option>
                <option selected="selected">Baja</option>
                <option>Intermedia</option>
                <option>Alta</option>
            </select>
        </div>
        <div style="flex: 1;">
            <label for="asignar">Asignar empleado</label>
            @Html.TextBox("Asignarempleado", "", new { @class = "form-control", id = "idasignar" })
        </div>
    </div>
    <br />
    <div class="form-group row mb-4">
        <div class="col-sm-8">
            <div>
                @Html.Label("lblContacto","Contacto")
            </div>
            <div>
                <div>
                    @Html.TextBox("contacto","",new {@class="form-control",@placeHolder="Example:sunombre@gmail.com"})
                </div>
            </div>
            <br />
            <div>
                @Html.Label("lblDescripcion", "Descripción")
            </div>
            <div>
                <div>
                    @Html.TextArea("descripcion", "", new { @class = "form-control", @placeHolder = "Enter your question or message" })
                </div>
            </div>
            <br />
            <label>Estado</label>
            <select name="ddlestado" id="ddlestado">
                <option>--Seleccionar estado--</option>
                <option selected="selected">Reportado</option>
                <option>En proceso</option>
                <option>En reparación</option>
                <option>Solucionado</option>
            </select>
            <br />
            <br />
            <div>
                @Html.Label("lblComentario", "Comentario:")
            </div>
            <div>
                <div>
                    @Html.TextArea("comentario", "", new { @class = "form-control", @placeHolder = "Enter your question or message" })
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="form-group row mb-4">
        <div>
            @Html.Label("lblFecha", "Fecha:")
        </div>
        <div class="col-sm-4">
            <div>
                @Html.TextBox("fecha", "", new { @class = "form-control", @placeHolder = "yyyy/mm/dd" })
            </div>
        </div>
    </div>

</form>
