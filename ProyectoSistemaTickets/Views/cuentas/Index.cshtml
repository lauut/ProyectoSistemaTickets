@{
    @model ProyectoSistemaTickets.Models.cuentas
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <h2>Login</h2>
    <form asp-action="ValidarUsuario" method="post">
        <div class="form-group row mt-5 pt-5 w-50">
            <div class="col-sm-2">
                <label>Usuario:</label>
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })
            </div>

            <div class="col-sm-2">
                <label>Contraseña:</label>
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Contra, new { @class = "form-control" })
            </div>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Mensaje
            </div>
        }

        <input type="submit" class="btn btn-primary" value="Validar" />
    </form>
</body>
</html>