@{
}
<br />
<div style="display: flex; justify-content: center;">
    <h3 class="text-dark ">Crear cuenta empleado:</h3>

</div>


<div style="display: flex; justify-content: center;">
    <form asp-action="Crearcuentaempleado">
        <div class="row g-2">
            <div class="col">
                <label for="formGroupExampleInput" class="form-label">Nombre completo:</label>
                @Html.TextBox("nombre", "", new { @class = "form-control" })
            </div>
            <div class="col mx-4">
                <label for="formGroupExampleInput" class="form-label">Nombre de usuario:</label>
                @Html.TextBox("usuario", "", new { @class = "form-control" })
            </div>
        </div>
        <div class="row g-2">
            <div class="col">
                <label for="formGroupExampleInput" class="form-label">Correo:</label>
                @Html.TextBox("tel", "", new { @class = "form-control" })
              

            </div>
            <div class="col mx-4">
                <label for="formGroupExampleInput" class="form-label">Contraseña:</label>
                @Html.TextBox("contra", "", new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="d-grid gap-2">
            <button class="btn btn-dark center" type="button">Crear</button>

        </div>


    </form>
</div>
